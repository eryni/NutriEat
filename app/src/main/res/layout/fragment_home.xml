<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.home.HomeFragment">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Row: Logo + Profile Picture -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <!-- Margin  -->
                <View
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="30dp"
                    android:layout_weight="1" />

                <!-- Logo -->
                <ImageView
                    android:id="@+id/logo"
                    android:layout_width="210dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:scaleType="fitStart"
                    android:src="@drawable/custom_logo" />

                <ImageView
                    android:id="@+id/profilePic"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/ic_default_avatar"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_launcher_foreground" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/poppins_medium"
                android:text="@string/hello_user"
                android:textColor="#000000"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/poppins_medium"
                android:text="@string/progress_today"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/poppins_medium"
                android:text="@string/fiber_goal"
                android:textColor="#007226" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/panel_background"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <!-- Circle on the left -->
                    <FrameLayout
                        android:layout_width="80dp"
                        android:layout_height="80dp">

                        <!-- Progress circle -->
                        <ProgressBar
                            android:id="@+id/circleProgress"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:indeterminate="false"
                            android:max="100"
                            android:progress="70"
                            android:progressDrawable="@drawable/circle_progress_bar_green"
                            android:rotation="-90" /> <!-- rotate so it fills clockwise from top -->

                        <!-- Centered content inside circle -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/num_fiber"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="760"
                                android:textColor="#000000"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/label_inside_circle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Calories"
                                android:textColor="#666666"
                                android:textSize="12sp" />
                        </LinearLayout>
                    </FrameLayout>


                    <!-- Text content on the right -->
                    <LinearLayout
                        android:layout_width="154dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/label_fiber"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Macros"
                            android:textColor="#000000"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <!-- Protein -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <!-- Left side text -->
                            <TextView
                                android:id="@+id/label_protein"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Protein"
                                android:textColor="#000000"
                                android:textSize="14sp" />

                            <!-- Right side text -->
                            <TextView
                                android:id="@+id/value_protein"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="84g"
                                android:textColor="#000000"
                                android:textSize="14sp" />
                        </LinearLayout>

                        <ProgressBar
                            android:id="@+id/proteinProgress"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="150dp"
                            android:layout_height="6dp"
                            android:max="100"
                            android:progress="80"
                            android:progressDrawable="@drawable/straight_progress_bar_green" />

                        <!--Carbs-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <!-- Left side text -->
                            <TextView
                                android:id="@+id/label_carbs"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Carbs"
                                android:textColor="#000000"
                                android:textSize="14sp" />

                            <!-- Right side text -->
                            <TextView
                                android:id="@+id/value_carbs"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="220g"
                                android:textColor="#000000"
                                android:textSize="14sp" />
                        </LinearLayout>

                        <ProgressBar
                            android:id="@+id/carbsProgress"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="150dp"
                            android:layout_height="6dp"
                            android:max="100"
                            android:progress="80"
                            android:progressDrawable="@drawable/straight_progress_bar_green" />

                        <!--Carbs-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <!-- Left side text -->
                            <TextView
                                android:id="@+id/label_fats"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Fats"
                                android:textColor="#000000"
                                android:textSize="14sp" />

                            <!-- Right side text -->
                            <TextView
                                android:id="@+id/value_fats"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="52g"
                                android:textColor="#000000"
                                android:textSize="14sp" />
                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="105dp"
                        android:layout_height="101dp"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imageView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:src="?android:attr/listChoiceIndicatorSingle" />

                        <TextView
                            android:id="@+id/textView4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="3 of 8 cups"
                            android:textAlignment="center" />

                        <Space
                            android:layout_width="match_parent"
                            android:layout_height="25dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <ImageButton
                                android:id="@+id/imageButton"
                                android:layout_width="20dp"
                                android:layout_height="23dp"
                                android:layout_weight="1"
                                android:src="@android:drawable/ic_menu_view" />

                            <TextView
                                android:id="@+id/textView5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="View Tips" />
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/imageButton3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@android:drawable/ic_input_add" />

                    <Space
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                    <ImageButton
                        android:id="@+id/imageButton4"
                        android:layout_width="12dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@drawable/custom_recipe_icon" />

                    <Space
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                    <ImageButton
                        android:id="@+id/imageButton7"
                        android:layout_width="17dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@drawable/custom_recipe_icon" />

                    <Space
                        android:layout_width="81dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                </LinearLayout>

            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Today's Meal Plan"
                    android:textColor="#000000" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/panel_background"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <!-- Left side text -->
                        <TextView
                            android:id="@+id/label_breakfast"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Breakfast"
                            android:textColor="#000000"
                            android:textSize="14sp" />

                        <!-- Right side text -->
                        <TextView
                            android:id="@+id/value_lunch"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="360 calories"
                            android:textColor="#000000"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <!-- Left side text -->
                        <TextView
                            android:id="@+id/label_lunch"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Lunch"
                            android:textColor="#000000"
                            android:textSize="14sp" />

                        <!-- Right side text -->
                        <TextView
                            android:id="@+id/value_lunchcal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="700 calories"
                            android:textColor="#000000"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <!-- Left side text -->
                        <TextView
                            android:id="@+id/label_dinner"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Dinner"
                            android:textColor="#000000"
                            android:textSize="14sp" />

                        <!-- Right side text -->
                        <TextView
                            android:id="@+id/value_dinnercal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="520 calories"
                            android:textColor="#000000"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <!-- Left side text -->
                        <TextView
                            android:id="@+id/label_snacks"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Snacks"
                            android:textColor="#000000"
                            android:textSize="14sp" />

                        <!-- Right side text -->
                        <TextView
                            android:id="@+id/value_snackcal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="150 calories"
                            android:textColor="#000000"
                            android:textSize="14sp" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
